<h1>Edit Photo</h1>

<form action="/update_photo/<%= @id %>">
  <div>
    <label>Caption:</label>
    <input id="Caption" type="text" name="the_caption" value="<%= @caption %>">
  </div>
  <div>
    <label>Image URL:</label>
    <input id="Image URL" type="text" name="the_source" value="<%= @source %>">
  </div>
  <div>
    <button>Update Photo</button>
  </div>
</form>
